@model artf_MVC.Models.Modelo

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar modelo</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idmod" />
            <div class="form-group">
                <label asp-for="Modequi" class="control-label"></label>
                <input asp-for="Modequi" class="form-control" />
                <span asp-validation-for="Modequi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
