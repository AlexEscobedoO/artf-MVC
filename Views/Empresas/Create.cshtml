@model artf_MVC.Models.Empresa

@{
    ViewData["Title"] = "Create";
}

<h4>Registrar Empresa</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rsempre" class="control-label"></label>
                <input asp-for="Rsempre" class="form-control" />
                <span asp-validation-for="Rsempre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dirempre" class="control-label"></label>
                <input asp-for="Dirempre" class="form-control" />
                <span asp-validation-for="Dirempre" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Tipoempre" class="control-label"></label>
                    <select asp-for="Tipoempre" class="form-control">
                        <option value="asignatario">Asignatario</option>
                        <option value="particular">Particular</option>
                        <option value="concesionario">Concesionario</option>
                        <option value="permisionario">Permisionario</option>
                    </select>
                    <span asp-validation-for="Tipoempre" class="text-danger"></span>
                </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="btn btn-info">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
